<VBox maxHeight="800.0" maxWidth="1200.0" minHeight="800.0" minWidth="1200.0" prefHeight="800.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1"
     fx:controller="Controller.ManageVideoController">
    <children>
        <AnchorPane maxHeight="800.0" maxWidth="1200.0" minHeight="800.0" minWidth="1200.0" prefHeight="800.0" prefWidth="1200.0" VBox.vgrow="ALWAYS">
            <children>
                <ImageView id="cornerImageView" fitHeight="800.0" fitWidth="1200.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../assets/loginCornerImage.png" />
                    </image>
                </ImageView>
                <Label id="manageZoomVideoLabel" fx:id="manageVideoLabel" layoutX="389.0" layoutY="52.0" text="Kelola Video Zoom" textFill="#0ab7e9">
                    <font>
                        <Font name="Arial Bold" size="50.0" />
                    </font>
                </Label>
                <Button id="uploadNewVideoButton" fx:id="uploadNewVideoButton" onAction="#handleUploadNewVideoButton" layoutX="129.0" layoutY="651.0" mnemonicParsing="false" prefHeight="59.0" prefWidth="338.0" style="-fx-border-color: #48cae4;" text="Unggah Video Baru" textFill="#006ca5">
                    <font>
                        <Font name="Arial Bold" size="30.0" />
                    </font>
                </Button>
                <ImageView id="logoImageView" fitHeight="164.0" fitWidth="201.0" layoutX="1009.0" layoutY="-10.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../assets/logo.png" />
                    </image>
                </ImageView>
                <TableView id="videoDataTable" fx:id="videoDataTable" layoutX="125.0" layoutY="252.0" prefHeight="367.0" prefWidth="945.0">
                    <columns>
                        <TableColumn fx:id="idVideoColumn" prefWidth="75.0" text="ID Video" />
                        <TableColumn fx:id="judulVideoColumn" prefWidth="200.0" text="Judul Video" />
                        <TableColumn fx:id="deskripsiVideoColumn" prefWidth="300.0" text="Deskripsi Video" />
                        <TableColumn fx:id="namaKelasColumn" prefWidth="150.0" text="Nama Kelas" />
                        <TableColumn fx:id="mataPelajaranColumn" prefWidth="150.0" text="Mata Pelajaran" />
                        <TableColumn fx:id="aksiColumn" prefWidth="150.0" text="Aksi" />
                    </columns>
                </TableView>
                <ComboBox id="chooseClassComboBox" fx:id="chooseClassComboBox" layoutX="277.0" layoutY="161.0" prefHeight="59.0" prefWidth="793.0" style="-fx-background-color: #FFFFFF; -fx-border-color: #0ab7e9;" />
                <Label id="chooseClassLabel" fx:id="chooseClassLabel" layoutX="125.0" layoutY="171.0" text="Kelas" textFill="#006ca5">
                    <font>
                        <Font name="Arial Bold" size="30.0" />
                    </font>
                </Label>
            </children>
        </AnchorPane>
    </children>
</VBox>
